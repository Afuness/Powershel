        <Button x:Name="Confirm" Content="确定生成" HorizontalAlignment="Left" Height="38" Margin="69,206,0,0" VerticalAlignment="Top" Width="81"/>
        <Button x:Name="Cancel" Content="取消" HorizontalAlignment="Right" Height="38" Margin="0,206,72,0" VerticalAlignment="Top" Width="76"/>
        <TextBox x:Name="TextBox" IsReadOnly="True" HorizontalAlignment="Left" Height="38" Margin="69,130,0,0" TextWrapping="Wrap" Text=" " VerticalAlignment="Top" Width="310"/>
        <Button x:Name="More" Content="More..." HorizontalAlignment="Left" Margin="396,130,0,0" VerticalAlignment="Top" Width="76" RenderTransformOrigin="0.342,-3.105" Height="38"/>
    </Grid>
</Window>
